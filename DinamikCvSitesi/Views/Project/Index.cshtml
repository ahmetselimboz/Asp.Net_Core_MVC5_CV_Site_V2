@using EntityLayer.Concrete
@model List<Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Proje Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            
                            <th>
                                Description
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Sil
                            </th>

                            <th>
                                Güncelle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ProjectID
                                </td>
                                <td>
                                    @item.ProjectName
                                </td>                                
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    <img src="/ImagesFile/@item.Image " alt="news image" class="img-fluid">
                                </td>
                                <td>
                                    <a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-outline-warning btn-rounded">Sil</a>
                                </td>
                                <td>
                                    <a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-outline-success btn-rounded">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Project/AddImage" class="btn btn-outline-primary btn-rounded ">Proje Ekle</a>
            </div>
        </div>
    </div>
</div>


