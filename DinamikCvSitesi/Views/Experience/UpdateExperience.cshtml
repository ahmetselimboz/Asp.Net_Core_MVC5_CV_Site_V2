@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Listesini Güncelle</h4>


            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ExperienceID)
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputUsername2" placeholder="Başlık">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Alt Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Subtitle" class="form-control" id="exampleInputUsername2" placeholder="Alt Başlık">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Açıklama</label>
                    <div class="col-sm-9">
                        <textarea type="text" asp-for="Description" class="form-control" id="exampleInputUsername2" placeholder="Açıklama" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tarih</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Date" class="form-control" id="exampleInputUsername2" placeholder="Tarih" >
                    </div>
                </div>

                <button class="btn btn-success btn-rounded">Değişiklikleri Kaydet</button>

            </form>
        </div>
    </div>
</div>



