@using EntityLayer.Concrete
@model List<Experience>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Sil
                            </th>

                            <th>
                                Güncelle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.ExperienceID
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Subtitle
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.Date
                            </td>
                            <td>
                                <a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-outline-warning btn-rounded">Sil</a>
                            </td>
                            <td>
                                <a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-outline-success btn-rounded">Güncelle</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/Experience/AddExperience" class="btn btn-outline-primary btn-rounded ">Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>

