@using EntityLayer.Concrete
@model List<Interest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İlgi Alanlarımın Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Description 1
                            </th>
                            <th>
                                Description 2
                            </th>
                            
                           
                            <th>
                                Güncelle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.InterestID
                                </td>
                                <td>
                                    @item.Description1
                                </td>
                                <td>
                                    @item.Description2
                                </td>
                                
                                
                                <td>
                                    <a href="/Interest/UpdateInterest/@item.InterestID" class="btn btn-outline-success btn-rounded">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>

