@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Listesini Güncelle</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AboutID)

                <div class="form-group">
                    <label for="exampleInputName1">İsim</label>
                    <input type="text" class="form-control" asp-for="Name" id="exampleInputName1" placeholder="İsim">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyisim</label>
                    <input type="text" class="form-control" asp-for="Surname" id="exampleInputName1" placeholder="Soyisim">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Başlık">
                </div>


                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" id="exampleTextarea1" rows="4"></textarea>
                </div>

               
                <button class="btn btn-success btn-rounded">Değişiklikleri Kaydet</button>


            </form>
        </div>
    </div>
</div>




