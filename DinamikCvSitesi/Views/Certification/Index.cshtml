@using EntityLayer.Concrete
@model List<Certification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sertifika Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Awards
                            </th>
                            <th>
                                Güncelle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CertificationID
                                </td>
                                <td>
                                    @item.Award
                                </td>
                                <td>
                                    <a href="/Certification/DeleteCertification/@item.CertificationID" class="btn btn-outline-warning btn-rounded">Sil</a>
                                </td>
                                <td>
                                    <a href="/Certification/UpdateCertification/@item.CertificationID" class="btn btn-outline-success btn-rounded">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Certification/AddCertification" class="btn btn-outline-primary btn-rounded ">Sertifika Ekle</a>

            </div>
        </div>
    </div>
</div>

