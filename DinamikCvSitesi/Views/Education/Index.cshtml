@using EntityLayer.Concrete
@model List<Education>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Eğitim Hayatımın Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle1
                            </th>
                            <th>
                                Subtitle2
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Sil
                            </th>

                            <th>
                                Güncelle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.EducationID
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Subtitle1
                                </td>
                                <td>
                                    @item.Subtitle2
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    <a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-outline-warning btn-rounded">Sil</a>
                                </td>
                                <td>
                                    <a href="/Education/UpdateEducation/@item.EducationID" class="btn btn-outline-success btn-rounded">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Education/AddEducation" class="btn btn-outline-primary btn-rounded ">Eğitim Ekle</a>
            </div>
        </div>
    </div>
</div>


